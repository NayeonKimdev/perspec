# 프로덕션 환경 변수 예시
# AWS Secrets Manager에 저장할 시크릿 값들

# 서버 설정
PORT=5000
NODE_ENV=production

# 데이터베이스 설정 (RDS)
DB_HOST=perspec-db.xxxxxxxxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=perspec
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_SSL=true
DB_POOL_MAX=20
DB_POOL_MIN=5

# JWT 설정
JWT_SECRET=your-very-secure-jwt-secret-key-min-32-characters
JWT_EXPIRES_IN=7d

# OpenAI API 설정
OPENAI_API_KEY=sk-your-openai-api-key

# CORS 설정
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# 로깅 설정
LOG_LEVEL=info
TRUST_PROXY=true

# 이메일 발송 설정
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
FRONTEND_URL=https://yourdomain.com
APP_NAME=Perspec
APP_URL=https://api.yourdomain.com

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/google/callback

# Kakao OAuth 설정
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/kakao/callback

# Naver OAuth 설정
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/naver/callback

# AWS 설정
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=perspec-uploads-your-bucket-id
AWS_SECRETS_MANAGER_SECRET_NAME=perspec/production

# 파일 정리 설정
FILE_CLEANUP_ENABLED=true
FILE_CLEANUP_INTERVAL_HOURS=24
TEMP_RETENTION_DAYS=1

