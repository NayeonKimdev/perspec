# 서버 설정
PORT=5000
NODE_ENV=development

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=perspec
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# JWT 설정
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_TEXT_TYPES=text/plain,text/markdown,application/json

# CORS 설정
CORS_ORIGIN=http://localhost:5173

# 로깅 설정
LOG_LEVEL=debug

# 이미지 최적화 설정
ENABLE_IMAGE_OPTIMIZATION=true
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
JPEG_QUALITY=85
PNG_COMPRESSION_LEVEL=6
WEBP_QUALITY=80
CONVERT_TO_WEBP=false
KEEP_ORIGINAL_IMAGE=false

# 프로덕션 설정
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5
ENABLE_SWAGGER=false
TRUST_PROXY=false

# 에러 추적 설정 (선택사항)
# Sentry 등의 에러 추적 서비스 연동 시 사용
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=production

# 이메일 발송 설정 (이메일 인증용)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@perspec.com
FRONTEND_URL=http://localhost:3000
APP_NAME=Perspec
APP_URL=http://localhost:5000

# 파일 정리 설정
# 주의: 사용자 데이터(미디어, 문서)는 기본적으로 자동 삭제되지 않습니다.
# 사용자가 명시적으로 삭제하거나, 계정이 삭제될 때까지 보관됩니다.
# 임시 파일만 자동으로 정리됩니다.
FILE_CLEANUP_ENABLED=true
FILE_CLEANUP_INTERVAL_HOURS=24
# 사용자 미디어 파일 보관 기간 (일) - 기본적으로 사용하지 않음 (자동 삭제 안 함)
MEDIA_RETENTION_DAYS=90
# 사용자 문서 파일 보관 기간 (일) - 기본적으로 사용하지 않음 (자동 삭제 안 함)
DOCUMENT_RETENTION_DAYS=90
# 임시 파일 보관 기간 (일) - 이 파일만 자동으로 정리됨
TEMP_RETENTION_DAYS=1
# 실패한 분석 파일 보관 기간 (일) - 기본적으로 사용하지 않음 (자동 삭제 안 함)
FAILED_ANALYSIS_RETENTION_DAYS=30
