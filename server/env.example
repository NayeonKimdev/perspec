# 환경변수 설정 예시
# 실제 사용 시 .env 파일로 복사하여 사용하세요

NODE_ENV=development
PORT=5000

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=perspec
DB_USER=postgres
DB_PASSWORD=password

# JWT 설정 - 강력한 키 생성 방법: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_EXPIRES_IN=7d

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here