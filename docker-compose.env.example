# Docker Compose용 환경변수 예시
# 실제 사용 시 .env 파일로 복사하여 사용하세요

NODE_ENV=production
PORT=5000

# 데이터베이스 설정
DB_HOST=postgres
DB_PORT=5432
DB_NAME=perspec
DB_USER=postgres
DB_PASSWORD=your-secure-password

# JWT 설정 - 강력한 키 필수!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here

# CORS 설정 (프로덕션 필수!)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# 로깅 레벨
LOG_LEVEL=info

# 프로덕션 환경 설정
DB_SSL=false                              # SSL 연결 사용 여부
DB_POOL_MAX=10                           # 데이터베이스 연결 풀 최대 크기
DB_POOL_MIN=2                            # 데이터베이스 연결 풀 최소 크기
ENABLE_SWAGGER=false                     # 프로덕션에서 Swagger 문서 비활성화 권장
TRUST_PROXY=true                         # 리버스 프록시 사용 시 true

